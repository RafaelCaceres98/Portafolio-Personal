---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import Angular from "./icons/angular.astro";  // Asegúrate de que la ruta sea correcta





const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS, // Si usas un ícono para Next.js, asegúrate de que esté bien referenciado
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind, // Ícono de Tailwind  
  },
  Angular: {
    name: "Angular",
    class: "bg-[#003159] text-white",
    icon: Angular, // Ícono de Tailwind  
  },
}

const PROJECTS = [
  {
    title: "SISTEMA  PARA LA GESTIÓN DE MANTENIMIENTOS Y DOCUMENTACIÓN DE VEHÍCULOS EN LA CRUZ ROJA COLOMBIANA SECCIONAL CESAR",
    description:
      "",
    link: "https://svgl.vercel.app/",
    github: "https://github.com/pheralb/svgl",
    image: "/projects/proyecto.jpg",  
    tags: [TAGS.NEXT, TAGS.TAILWIND, TAGS.Angular ],
  },
  {
    title: "Experiencia en Desarrollo de APIs RESTful",
    description:
      "Desarrollo de APIs robustas y escalables utilizando ASP.NET Core 6.7.8 como Backend y Sql server como base de datos ",
      
    link: "https://adventjs.dev",
    image: "/projects/api.jpg",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "Sistema Para Licorerias",
    description:
      "Desarrollo sistema web con pedidos al wpp en tiempo real, con su interfaz atractiva para cualquier negocio y adaptable",
      
    link: "https://adventjs.dev",
    image: "/projects/licoreria.jpg",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "Sistema De Carrito de compras",
    description:
      "El sistema de carrito de compras es una aplicación desarrollada utilizando el patrón de diseño Modelo-Vista-Controlador (MVC) en C#, proporcionando una experiencia eficiente y segura para gestionar productos y realizar compras en línea. La aplicación sigue las mejores prácticas para mantener la escalabilidad, seguridad y facilidad de uso.",
      
    link: "https://adventjs.dev",
    image: "/projects/compras.jpg",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "Sistema De Prestamos",
    description:
      "Aplicación web para la administración de préstamos personales y empresariales, desarrollada con C# MVC y SQL Server. Facilita el registro de clientes, gestión de pagos, cálculo de intereses y generación de reportes financieros. Incluye autenticación segura, notificaciones automáticas y un panel de control intuitivo para el seguimiento de préstamos activos y vencidos.",
      
    link: "https://adventjs.dev",
    image: "/projects/prestamo.jpg",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



